{% doc %}
  @prompt
    Can you create a ticker with horizontal scrolling text 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ticker-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
  }

  .ai-ticker-track-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-ticker-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-ticker-{{ ai_gen_id }}:hover .ai-ticker-track-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .ai-ticker-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    padding: 0 {{ block.settings.item_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
  }

  .ai-ticker-separator-{{ ai_gen_id }} {
    display: inline-block;
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
  }

  @keyframes ai-ticker-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-ticker-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<ticker-scroll-{{ ai_gen_id }} class="ai-ticker-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ticker-track-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      {% if block.settings.text_1 != blank %}
        <div class="ai-ticker-item-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
        <span class="ai-ticker-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      {% if block.settings.text_2 != blank %}
        <div class="ai-ticker-item-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
        <span class="ai-ticker-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      {% if block.settings.text_3 != blank %}
        <div class="ai-ticker-item-{{ ai_gen_id }}">{{ block.settings.text_3 }}</div>
        <span class="ai-ticker-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      {% if block.settings.text_4 != blank %}
        <div class="ai-ticker-item-{{ ai_gen_id }}">{{ block.settings.text_4 }}</div>
        <span class="ai-ticker-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      {% if block.settings.text_5 != blank %}
        <div class="ai-ticker-item-{{ ai_gen_id }}">{{ block.settings.text_5 }}</div>
        <span class="ai-ticker-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
    {% endfor %}
  </div>
</ticker-scroll-{{ ai_gen_id }}>

<script>
  (function() {
    class TickerScroll{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustScrollSpeed();
      }

      adjustScrollSpeed() {
        const track = this.querySelector('.ai-ticker-track-{{ ai_gen_id }}');
        if (!track) return;

        const trackWidth = track.offsetWidth / 2;
        const speed = {{ block.settings.scroll_speed }};
        const pixelsPerSecond = trackWidth / speed;

        track.style.setProperty('--ticker-speed', `${speed}s`);
      }
    }

    customElements.define('ticker-scroll-{{ ai_gen_id }}', TickerScroll{{ ai_gen_id }});
  })();
</script>

