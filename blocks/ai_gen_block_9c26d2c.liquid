{% doc %}
  @prompt
    Can you make a blank spacer
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-spacer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-spacer-inner-{{ ai_gen_id }} {
    height: {{ block.settings.desktop_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-spacer-inner-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }
{% endstyle %}

<spacer-block-{{ ai_gen_id }} class="ai-spacer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-spacer-inner-{{ ai_gen_id }}"></div>
</spacer-block-{{ ai_gen_id }}>

<script>
  (function() {
    class SpacerBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('spacer-block-{{ ai_gen_id }}', SpacerBlock{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Spacer",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Desktop"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "label": "Height",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 50
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Height",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Spacer"
    }
  ]
}
{% endschema %}